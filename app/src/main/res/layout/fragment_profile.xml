<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/profile_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:visibility="visible"
    tools:context="com.aquar.myaquar_egypt.Fragments.Profile_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#00000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
             />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_photo"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/profile_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_add_circle_black_24dp" />



        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_photo"
            android:layout_marginTop="5dp"
            android:text="Brian Kelly"
            android:textColor="#000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="40dp"
            android:text="Team Lead"
            android:textColor="#363638"
            android:textSize="12sp"
            />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_title"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/data_button_click"
                android:layout_width="match_parent"
                android:background="#ffc9000c"
                android:layout_height="1.5dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#AFACAC"
            android:layout_below="@+id/buttons"
            >

            <LinearLayout
                android:id="@+id/username_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Username"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:text="Ravon"
                    android:textColor="#000"
                    android:gravity="right"
                    android:layout_gravity="right|center"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--<LinearLayout-->

                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#fff"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginBottom="0.5dp"-->
                <!--android:orientation="horizontal">-->
                <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="Full name"-->
                    <!--android:textSize=   "15sp"-->
                    <!--android:layout_margin="10dp"-->
                    <!--/>-->

                <!--<TextView-->
                    <!--android:id="@+id/fullname"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1.5"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:gravity="right"-->
                    <!--android:text="Brain Kelly"-->
                    <!--android:textColor="#000"-->
                    <!--android:textSize="15sp" />-->

            <!--</LinearLayout>-->
            <LinearLayout
                android:id="@+id/jobTitle_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job title"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/jobTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:text="Software Engineer"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/email_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginBottom="0.5dp"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="hghghv@mail.com"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mobile_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="01054435676"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#fff">
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>