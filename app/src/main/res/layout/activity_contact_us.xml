<?xml version="1.0" encoding="utf-8"?>

<ScrollView


    android:id="@+id/parentCountactUs"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context="com.aquar.myaquar_egypt.Activity.Contact_us"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#000"
        android:text="Contact Us"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/Red"
            android:text="Contact Us"
            android:layout_height="match_parent"/>


        <TextView
            android:lineSpacingExtra="6dp"
            android:id="@+id/contactus"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="@string/about_text"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/map"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_marginTop="3dp"
                android:text="5th Settlement-New Cairo,93 Samiha El-Bagoury St "
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/mail"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/mail"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:text=" info@myaquar_eg.com"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/callus"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text=" +2 01033113330"
                android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="40dp"

            android:textColor="#000"
            android:text="Don't forget to follow us on :"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:gravity="bottom"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="30dp"
                android:onClick="openTwitter"

                android:src="@drawable/twitter"
                android:layout_height="30dp"
                />
            <ImageView
                android:onClick="openfacebook"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facebook"
                android:layout_height="30dp" />
            <ImageView
                android:onClick="openinsta"
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/insta"
                android:layout_height="30dp" />
            <ImageView

                android:onClick="openyoutube"
                android:layout_width="50dp"

                android:layout_marginLeft="10dp"
                android:src="@drawable/youtube"

                android:layout_height="30dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"

                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>