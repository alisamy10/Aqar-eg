<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#FFF"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/nav_header_profile_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/logo"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_weight="3"
        android:background="#FFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_header_profile_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="ALEX JOHAN"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView

            android:id="@+id/nav_header_profile_email_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abdalla167osman@gamil.com"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout><!--<LinearLayout--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:layout_weight="0">-->

