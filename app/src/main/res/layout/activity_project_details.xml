<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="visible"
    android:id="@+id/parentOfProjectDetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aquar.myaquar_egypt.Activity.Projectdetails"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/Product_Slider"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"></com.daimajia.slider.library.SliderLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="5dp"
                            android:text="Life park"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/devolepor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_marginLeft="13dp"
                            android:layout_marginBottom="10dp"
                            android:text="El shrouk"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:theme="@style/RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="1" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_weight="0.6"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/like"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/like" />

                        <Button
                            android:id="@+id/share"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/share" />

                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginBottom="8dp"
                            android:background="@android:color/holo_red_dark"
                            android:gravity="center"
                            android:padding="5dp">

                            <Button

                                android:id="@+id/call"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center"
                                android:background="@drawable/call_new_icon"
                                android:backgroundTint="@android:color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_margin="0dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Description"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/some_description" />

                        <Button
                            android:id="@+id/see_more_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="right"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="0dp"
                            android:background="@null"
                            android:gravity="bottom|end"
                            android:text="See more"
                            android:textAllCaps="false"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="13dp" />


                    </RelativeLayout>
<TextView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#c7c7c7"
    />
                    <Button
                        android:id="@+id/go_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                       android:background="@null"
                        android:drawableLeft="@drawable/location"
                        android:drawableRight="@drawable/arrow"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="   View On map"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="#807C80"
                        android:textSize="18dp" />

                </LinearLayout>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c7c7c7"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="Facts"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="13dp"
                            android:gravity="left"
                            android:text="price"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Type"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Bedroom"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Bathroom"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="Area"
                            android:textSize="16dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_marginTop="10dp">


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="Start From "
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="   "
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="5m"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"

                            android:gravity="right"
                            android:text="Apartment"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="16dp" />/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">


                            <TextView
                                android:id="@+id/bedroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="4"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="   -  "
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/maxBedroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="5"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">


                            <TextView
                                android:id="@+id/bathroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="4"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="   -  "
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/maxBathroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="5"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">


                            <TextView
                                android:id="@+id/area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="400mq2"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="   -  "
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/maxArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:text="500mq2"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16dp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c7c7c7"
                />
            <Button
                android:id="@+id/structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

             android:background="#fff"
                android:drawableLeft="@drawable/plan"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="    View apartment plan"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="#807C80"
                android:textSize="18dp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c7c7c7"
                />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Amenities"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balcony"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared Pool"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View of Water"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pets Allowed"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical"


                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private Garden"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View of Landmark"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/true_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared Gym"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/go_youtube"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_btn"
                android:drawableLeft="@drawable/youtube_icon"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="     Youtube video"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="#807C80"
                android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/send_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:baselineAligned="false"
            android:paddingLeft="20dp"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:text="Send  Email"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>